<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_buttons_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ashGray"
    tools:context=".ui.SettingsFragmentButtons">

    <Button
        android:id="@+id/logout"
        android:layout_width="145dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:background="@drawable/dog_paw"
        android:text="@string/log_out"
        android:textSize="20sp"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/ashGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_password" />

    <Button
        android:id="@+id/create_own_route"
        android:layout_width="145dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="128dp"
        android:background="@drawable/dog_paw"
        android:text="@string/create_own_route"
        android:textSize="11sp"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/ashGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/change_password"
        android:layout_width="145dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:background="@drawable/dog_paw"
        android:text="@string/change_password"
        android:textSize="13sp"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/ashGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_own_route" />
</androidx.constraintlayout.widget.ConstraintLayout>